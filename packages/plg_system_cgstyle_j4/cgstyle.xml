<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">
	<name>plg_system_cgstyle</name>
	<author>ConseilGouz</author>
	<creationDate>2025-08-25</creationDate>
	<copyright>(C)2025 ConseilGouz. All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt</license>
	<authorEmail>pascal.leconte@conseilgouz.com</authorEmail>
	<authorUrl>www.conseilgouz.com</authorUrl>
	<version>2.5.1</version>
	<description>PLG_SYSTEM_CGSTYLE_XML_DESCRIPTION</description>
    <namespace path="src">Conseilgouz\Plugin\System\Cgstyle</namespace>
	<files>
        <folder plugin="cgstyle">services</folder>
		<folder>src</folder>
        <filename>cgstyle.xml</filename>
        <filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_system_cgstyle.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_cgstyle.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_system_cgstyle.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_system_cgstyle.sys.ini</language>
	</languages>
	<config>
       <fields name="params" >
            <fieldset name="basic" addfieldprefix="Conseilgouz\Plugin\System\Cgstyle\Field">
				<field name="version" type="version" extension="cgstyle" margintop="-3em" />
				<field name="customcss" type="textarea" label="CGTS_CSS" description="CGTS_CSS_DESC" cols="200" rows="4" filter="raw" 
					default=""			
				/>	
                
			</fieldset>
        </fields>
		</config>
</extension>
